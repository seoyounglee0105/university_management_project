<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.green.university.repository.interfaces.StuStatRepository">

<select id="findByStudentIdOrderbyToDateDesc" resultType="com.green.university.repository.model.StuStat">
	SELECT * FROM stu_stat_tb WHERE student_id = #{studentId} ORDER BY to_date DESC LIMIT 1
</select>

<insert id="insertFirstStatus">
	INSERT INTO stu_stat_tb VALUES (#{studentId}, '재학', now(), '9999-01-01')
</insert>

</mapper>