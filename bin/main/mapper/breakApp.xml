<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.green.university.repository.interfaces.BreakAppRepository">

<insert id="insert">
	INSERT INTO break_app_tb (student_id, from_year, from_semester, to_year, to_semester, type)
	VALUES (#{studentId}, #{fromYear}, #{fromSemester}, #{toYear}, #{toSemester}, #{type})
</insert>

<select id="findByStudentId" resultType="com.green.university.repository.model.BreakApp">
	SELECT * FROM break_app_tb WHERE student_id = #{studentId}
</select>

<select id="findById" resultType="com.green.university.repository.model.BreakApp">
	SELECT * FROM break_app_tb WHERE id = #{id}
</select>

</mapper>